@model dotNETacademy.ViewModel.ListDeelnemersViewModel

<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Deelnemer.Naam" class="control-label"></label>
            <input asp-for="Deelnemer.Naam" class="form-control" />
            <span asp-validation-for="Deelnemer.Naam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Deelnemer.Voornaam" class="control-label"></label>
            <input asp-for="Deelnemer.Voornaam" class="form-control" />
            <span asp-validation-for="Deelnemer.Voornaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Deelnemer.OpenstaandeCredits" class="control-label"></label>
            <input asp-for="Deelnemer.OpenstaandeCredits" class="form-control" />
            <span asp-validation-for="Deelnemer.OpenstaandeCredits" class="text-danger"></span>
        </div>
        <input aspfor="Deelnemer.Customerid" type="hidden" />
        
       <label>@Model.Id.ToString()</label>
        <div class="form-group">

            <input asp-for="Deelnemer.CustomerId" type="text"  value="@Model.Id.ToString()"/>
            <input type="submit" value="Toevoegen" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
