@model dotNETacademy.ViewModel.Admin_DeelnemerViewModel
@{
    ViewData["Title"] = "Deelnemers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Overzicht van alle deelnemers</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Deelnemer.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deelnemer.Voornaam)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Deelnemer.OpenstaandeCredits)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Deelnemers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Voornaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OpenstaandeCredits)
                </td>
                <td>

                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Beheren</a>

                </td>
            </tr>
        }
    </tbody>
</table>


