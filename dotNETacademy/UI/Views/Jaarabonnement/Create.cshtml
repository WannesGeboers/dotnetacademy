@model dotNETacademy.ViewModel.CreateAbonnementViewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Niew jaarabonnement";
}

<div class="m-3">

    <h4>Jaarabonnement</h4>
    <hr />
    <div class="row">
        <div class="col-sm-11 col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Jaarabonnement.JaarAbonnement" class="control-label"></label>
                    <select asp-for="Jaarabonnement.JaarAbonnementId" class="form-control" asp-items="Model.TypeJaarabonnement"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Jaarabonnement.Prijs" class="control-label"></label>
                    <input asp-for="Jaarabonnement.Prijs" class="form-control" />
                    <span asp-validation-for="Jaarabonnement.Prijs" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Jaarabonnement.Startdatum" class="control-label"></label>
                    <input asp-for="Jaarabonnement.Startdatum" class="form-control" />
                    <span asp-validation-for="Jaarabonnement.Startdatum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Jaarabonnement.Einddatum" class="control-label"></label>
                    <input asp-for="Jaarabonnement.Einddatum" class="form-control" />
                    <span asp-validation-for="Jaarabonnement.Einddatum" class="text-danger"></span>
                </div>
                @* Hidden CustomerId field *@
                <div class="form-group">
                    <input type="hidden" asp-for="Jaarabonnement.CustomerId" class="form-control" asp-items="ViewBag.CustomerId" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" id="btnSubmit" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>